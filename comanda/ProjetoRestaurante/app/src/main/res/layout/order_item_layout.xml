<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_rounded_shadow_gray_sm"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/addItems_description_label_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="GarÃ§om"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/addItems_code_label_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/order_user_imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addItems_code_label_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Mesa/Comanda"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/order_note_imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/order_note_imageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:foregroundGravity="center_vertical|center_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/addItems_code_label_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/addItems_code_label_textView"
                app:srcCompat="@drawable/ic_baseline_sticky_note_2_24" />

            <ImageView
                android:id="@+id/order_user_imageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:foregroundGravity="clip_horizontal|center_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/addItems_description_label_textView"
                app:layout_constraintStart_toEndOf="@+id/addItems_code_label_textView"
                app:layout_constraintTop_toTopOf="@+id/addItems_description_label_textView"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/addItems_code_value_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/addItems_code_label_textView"
                app:layout_constraintStart_toStartOf="@+id/order_note_imageView"
                app:layout_constraintTop_toBottomOf="@+id/addItems_code_label_textView" />

            <TextView
                android:id="@+id/addItems_description_value_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/addItems_description_label_textView"
                app:layout_constraintStart_toStartOf="@+id/order_user_imageView"
                app:layout_constraintTop_toBottomOf="@+id/addItems_description_label_textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>